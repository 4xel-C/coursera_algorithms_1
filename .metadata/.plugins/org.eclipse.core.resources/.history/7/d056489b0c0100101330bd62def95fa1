import edu.princeton.cs.algs4.StdIn;
import java.util.Scanner;
import java.io.FileNotFoundException;
import java.io.File;
import java.util.ArrayList;
import edu.princeton.cs.algs4.StdRandom;

public class RandomWord {
	
	public static void main(String[] args) {
		
		ArrayList<String> words = new ArrayList<>();
		
		// if no argument when calling the program, input the user
		if (args.length == 0) {
			String input = StdIn.readString();
			String[] wordsInput = input.split(" ");
			for (String word : wordsInput) {
				words.add(word);
			}
			
		} else if (args.length == 1) {
			String file = args[0];
			
			try {
				Scanner scanner = new Scanner(new File(file));
				while (scanner.hasNextLine()) {
					String line = scanner.nextLine();
					for (String word : line.split(" ")) {
						words.add(word);
					}
					
				}
			} catch (FileNotFoundException e) {
				System.out.println("The file could not have been found");
				return;
			}
		}
	
		if (words.size() == 0) {
			return;
		}
		
		String champion = "";
		
		
		
		for(int i = 0; i < words.size(); i++) {
			System.out.println("i");
			
			if (StdRandom.bernoulli(1/(i+1))) {
				champion = words.get(i);
			}
		}
		
		System.out.println(champion);
	}

}
